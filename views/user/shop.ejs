  <section class="shop-hero">
    <div class="shop-hero-content">
        <h1>SHOP</h1>
        <div class="breadcrumb">
            <a href="/">HOME</a> / <span>SHOP</span>
        </div>
    </div>
    <div class="hero-wave"></div>
</section>

<!-- Shop Content -->
<div class="shop-container">
    <aside class="shop-sidebar">
        <!-- Categories Section -->
        <div class="filter-section">
            <div class="filter-header">
                <h4>CATEGORIES</h4>
                <button class="toggle-filter"><i class="fas fa-chevron-up"></i></button>
            </div>
            <div class="filter-options" id="category-filters">
                <% if (categories.length > 0) { %>
                    <% categories.forEach(category => { %>
                        <% if (category.isListed && !category.isDeleted) { %>
                            <label class="filter-option">
                                <input 
                                    type="checkbox" 
                                    name="category" 
                                    value="<%= category._id %>" 
                                    onchange="filterProducts()"
                                >
                                <%= category.name %>
                            </label>
                        <% } %>
                    <% }) %>
                <% } else { %>
                    <p>No categories found.</p>
                <% } %>
            </div>
        </div>

        <div class="filter-section">
            <div class="filter-header">
                <h4>PRICE</h4>
                <button class="toggle-filter"><i class="fas fa-chevron-up"></i></button>
            </div>
            <div class="filter-options">
                <div class="price-range">
                    <div class="range-inputs">
                        <input type="text" placeholder="Min" value="₹0">
                        <input type="text" placeholder="Max" value="₹5000">
                    </div>
                    <!-- <input type="range" min="0" max="10000" class="range-slider"> -->
                    <button class="apply-button">Apply</button>
                </div>
            </div>
        </div>

        <!-- Size Section -->
        <div class="filter-section">
            <div class="filter-header">
                <h4>SIZE</h4>
                <button class="toggle-filter"><i class="fas fa-chevron-up"></i></button>
            </div>
            <div class="filter-options" id="size-filters">
                <div class="size-options">
                    <% const sizes = ['7', '8', '9', '10']; %>
                    <% sizes.forEach(size => { %>
                        <button 
                            class="size-option" 
                            data-size="<%= size %>" 
                            onclick="toggleSizeFilter('<%= size %>')"
                        >
                            <%= size %>
                        </button>
                    <% }) %>
                </div>
            </div>
        </div>

