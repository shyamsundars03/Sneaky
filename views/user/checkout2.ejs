<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/sneaky.png" type="image/png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <title>SNEAKY</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        }

        body {
            background-color: #f5f5f5;
        }

        .header {
            background: #000;
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            color: #fff;
            font-size: 1.5rem;
            font-weight: bold;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .logo-icon {
            width: 24px;
            height: 24px;
            background: #ff0000;
            border-radius: 50%;
        }

        .nav-links {
            display: flex;
            gap: 2rem;
            color: #fff;
        }

        .nav-links a {
            color: #fff;
            text-decoration: none;
        }

        .main-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
        }

        .checkout-header {
            background: #000;
            color: #fff;
            padding: 3rem 0;
            text-align: center;
            position: relative;
            font-size: 1.3rem;
        }

        .wave-divider {
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 100%;
            height: 50px;
            background: #fff;
            border-radius: 100% 100% 0 0;
        }

        .checkout-container {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 2rem;
            padding: 2rem;
            background: #fff;
            border-radius: 8px;
            margin-top: -2rem;
            position: relative;
            z-index: 1;
        }

        .progress-bar {
            display: flex;
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .progress-item {
            flex: 1;
            padding: 1rem;
            border-bottom: 2px solid #eee;
        }

        .progress-item.active {
            border-bottom-color: #ff0000;
        }

        .address-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin: 1rem 0;
        }

        .address-card {
            border: 1px solid #eee;
            padding: 1rem;
            border-radius: 8px;
            cursor: pointer;
        }

        .address-card.selected {
            border-color: #ff0000;
        }

        .shipping-methods {
            display: grid;
            gap: 1rem;
            margin: 1rem 0;
        }

        .shipping-option {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem;
            border: 1px solid red;
            border-radius: 8px;
        }

        .payment-methods {
            display: grid;
            gap: 1rem;
            margin: 1rem 0;
        }

        .payment-option {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem;
            border: 1px solid #eee;
            border-radius: 8px;
        }

        .order-summary {
            background: #f9f9f9;
            padding: 1.5rem;
            border-radius: 8px;
        }
        .order-summary h2 {
            padding-bottom: 20px;
        }

        .summary-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 1rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #eee;
        }

        .total {
            color: #ff0000;
            font-weight: bold;
            font-size: 1.2rem;
        }

        .btn {
            background: #ff0000;
            color: #fff;
            border: none;
            padding: 0.8rem 1.5rem;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
        }

        .footer {
            background: #000;
            color: #fff;
            padding: 3rem 2rem;
            margin-top: 4rem;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
        }

        .social-links {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }

        @media (max-width: 768px) {
            .checkout-container {
                grid-template-columns: 1fr;
            }

            .nav-links {
                display: none;
            }

            .progress-bar {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>

    <%-include("../../views/partials/user/header")%>

    <div class="checkout-header">
        <h1>CHECKOUT 2</h1>
    </div>

    <main class="main-content">
        <div class="checkout-container">
            <div class="checkout-form">
                <h2>Shipping Information</h2>
                <div class="progress-bar">
                    <div class="progress-item">Shipping Method</div>
                    <div class="progress-item active">Payment Method</div>
                    <div class="progress-item">Review</div>
                </div>

                <!-- Shipping Address Section -->
                <div class="shipping-address">
                    <h3>Shipping Address</h3>
                    <div class="address-cards">
                        <div class="address-card selected" id="selectedAddress">
                            <!-- Address will be dynamically populated here -->
                        </div>
                    </div>
                </div>

                <!-- Shipping Method Section -->
                <div class="shipping-methods">
                    <h3>Shipping Method</h3>
                    <div class="shipping-option" id="selectedShippingMethod">
                        <!-- Shipping method will be dynamically populated here -->
                    </div>
                </div>

                <!-- Payment Method Section -->
<!-- Payment Method Section -->
<div class="payment-methods">
    <h3>Payment Method</h3>
    <div class="payment-option">
        <input type="radio" name="payment" value="CashOnDelivery" checked>
        <div>
            <h4>Cash on Delivery</h4>
        </div>
    </div>
    <div class="payment-option">
        <input type="radio" name="payment" value="Razorpay">
        <div>
            <h4>Online Payment (Razorpay)</h4>
        </div>
    </div>
    <% if (walletBalance > 0) { %>
        <div class="payment-option">
            <input type="radio" name="payment" value="Wallet" id="wallet">
            <label for="wallet">
                <h4>Wallet (Balance: ₹<%= walletBalance.toFixed(2) %>)</h4>
            </label>
        </div>
        <% } %>
</div>

                <button class="checkout-btn" onclick="window.location.href='/checkout1'">Back</button>
                <button class="checkout-btn" onclick="proceedToCheckout3()">Continue</button>
            </div>

            <!-- Order Summary -->
            <div class="order-summary">
                <h2>Your order</h2>
                <div class="summary-item">
                    <span>Subtotal</span>
                    <span>₹<%= cartTotal %></span>
                </div>
                <div class="summary-item">
                    <span>Shipping & Handling</span>
                    <span id="shippingCost">₹<%= shippingCost %></span>
                </div>
                <div class="summary-item total-row">
                    <span>Total</span>
                    <span id="totalAmount">₹<%= cartTotal + shippingCost %></span>
                </div>
            </div>
        </div>
    </main>

    <%-include("../../views/partials/user/footer")%>
<script>

    // Retrieve data from query parameters
    const urlParams = new URLSearchParams(window.location.search);
    const shippingCost = Number(urlParams.get('shippingCost'));
    const shippingMethod = urlParams.get('shippingMethod');
    const selectedAddress = JSON.parse(decodeURIComponent(urlParams.get('selectedAddress')));


console.log("Shipping Cost:", shippingCost);
console.log("Shipping Method:", shippingMethod);
console.log("Selected Address:", selectedAddress);




    // Store data in sessionStorage for use in checkout3
    sessionStorage.setItem('shippingCost', shippingCost);
    sessionStorage.setItem('shippingMethod', shippingMethod);
    sessionStorage.setItem('selectedAddress', JSON.stringify(selectedAddress));

    // Populate the selected address
    const selectedAddressElement = document.getElementById('selectedAddress');
    if (selectedAddress) {
        selectedAddressElement.innerHTML = `
            <h4>${selectedAddress.name}</h4>
            <p>${selectedAddress.street}, ${selectedAddress.city}, ${selectedAddress.state}, ${selectedAddress.zip}, ${selectedAddress.country}</p>
        `;
    }

    // Populate the selected shipping method
    const selectedShippingMethodElement = document.getElementById('selectedShippingMethod');
    if (shippingMethod) {
        selectedShippingMethodElement.innerHTML = `
            <h4>${shippingMethod} - ₹${shippingCost}</h4>
        `;
    }
    function proceedToCheckout3() {
    const paymentMethod = document.querySelector('input[name="payment"]:checked').value;
    const walletBalance = <%= walletBalance %>;
    const cartTotal = <%= cartTotal %>;
    const shippingCost = <%= shippingCost %>;
    const totalAmount = cartTotal + shippingCost;

    // If wallet is selected and balance is insufficient
    if (paymentMethod === 'Wallet' && walletBalance < totalAmount) {
        Swal.fire({
            icon: 'error',
            title: 'Insufficient Wallet Balance',
            html: `
                <div style="text-align: left;">
                    <p>Your wallet balance: <strong>₹${walletBalance.toFixed(2)}</strong></p>
                    <p>Order total: <strong>₹${totalAmount.toFixed(2)}</strong></p>
                    <p>Short by: <strong>₹${(totalAmount - walletBalance).toFixed(2)}</strong></p>
                </div>
                <div class="payment-options" style="margin-top: 20px; display: flex; gap: 10px; justify-content: center;">
                    <button class="btn btn-primary" 
                            onclick="selectPaymentMethod('Razorpay')"
                            style="padding: 8px 16px; background: #007bff; color: white; border: none; border-radius: 4px;">
                        Pay Online
                    </button>
                    <button class="btn btn-secondary" 
                            onclick="selectPaymentMethod('CashOnDelivery')"
                            style="padding: 8px 16px; background: #6c757d; color: white; border: none; border-radius: 4px;">
                        Cash on Delivery
                    </button>
                </div>
            `,
            showConfirmButton: false,
            footer: '<a href="/wallet" style="color: #007bff;">Add funds to wallet</a>'
        });
        return;
    }

    // Proceed if validation passes
    const shippingCostParam = sessionStorage.getItem('shippingCost');
    const shippingMethod = sessionStorage.getItem('shippingMethod');
    const selectedAddress = sessionStorage.getItem('selectedAddress');

    window.location.href = `/checkout3?shippingCost=${shippingCostParam}&shippingMethod=${shippingMethod}&selectedAddress=${encodeURIComponent(selectedAddress)}&paymentMethod=${paymentMethod}`;
}

function selectPaymentMethod(method) {
    document.querySelector(`input[value="${method}"]`).checked = true;
    Swal.close();
}

    function selectPaymentMethod(method) {
        document.querySelector(`input[value="${method}"]`).checked = true;
        Swal.close();
    }

</script>
    

</body>
</html>