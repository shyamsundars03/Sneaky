<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/sneaky.png" type="image/png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <title>SNEAKY</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
        }

        body {
            background-color: #f5f5f5;
        }

        .header {
            background: #000;
            padding: 1rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo {
            color: #fff;
            font-size: 1.5rem;
            font-weight: bold;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .logo-icon {
            width: 24px;
            height: 24px;
            background: #ff0000;
            border-radius: 50%;
        }

        .nav-links {
            display: flex;
            gap: 2rem;
            color: #fff;
        }

        .nav-links a {
            color: #fff;
            text-decoration: none;
        }

        .main-content {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
        }

        .checkout-header {
            background: #000;
            color: #fff;
            padding: 3rem 0;
            text-align: center;
            position: relative;
            font-size: 1.3rem;
        }

        .wave-divider {
            position: absolute;
            bottom: -2px;
            left: 0;
            width: 100%;
            height: 50px;
            background: #fff;
            border-radius: 100% 100% 0 0;
        }

        .checkout-container {
            display: grid;
            grid-template-columns: 2fr 1fr;
            gap: 2rem;
            padding: 2rem;
            background: #fff;
            border-radius: 8px;
            margin-top: -2rem;
            position: relative;
            z-index: 1;
        }

        .progress-bar {
            display: flex;
            gap: 2rem;
            margin-bottom: 2rem;
        }

        .progress-item {
            flex: 1;
            padding: 1rem;
            border-bottom: 2px solid #eee;
        }

        .progress-item.active {
            border-bottom-color: #ff0000;
        }

        .address-cards {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1rem;
            margin: 1rem 0;
        }

        .address-card {
            border: 1px solid #eee;
            padding: 1rem;
            border-radius: 8px;
            cursor: pointer;
        }

        .address-card.selected {
            border-color: #ff0000;
        }

        .shipping-methods {
            display: grid;
            gap: 1rem;
            margin: 1rem 0;
        }

        .shipping-option {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem;
            border: 1px solid red;
            border-radius: 8px;
        }

        .payment-methods {
            display: grid;
            gap: 1rem;
            /* margin: 1rem 0; */
        }

        .payment-option {
            width: 100%;
            display: flex;
            align-items: center;
            /* gap: 1rem; */
            /* padding: 1rem; */
            border: 1px solid #eee;
            border-radius: 8px;
        }

        .order-summary {
            background: #f9f9f9;
            padding: 1.5rem;
            border-radius: 8px;
        }
        .order-summary h2 {
            padding-bottom: 20px;
        }

        .summary-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 1rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid #eee;
        }

        .total {
            color: #ff0000;
            font-weight: bold;
            font-size: 1.2rem;
        }

        .btn {
            background: #ff0000;
            color: #fff;
            border: none;
            padding: 0.8rem 1.5rem;
            border-radius: 4px;
            cursor: pointer;
            font-weight: bold;
        }

        .footer {
            background: #000;
            color: #fff;
            padding: 3rem 2rem;
            margin-top: 4rem;
        }

        .footer-content {
            max-width: 1200px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 2rem;
        }

        .social-links {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }

        @media (max-width: 768px) {
            .checkout-container {
                grid-template-columns: 1fr;
            }

            .nav-links {
                display: none;
            }

            .progress-bar {
                flex-direction: column;
            }
        }

/* Add these styles to your CSS file */


.payment-option input[type="radio"] {
    position: absolute;
    opacity: 0;
}

.payment-label {
    width: 100%;
    display: flex;
    align-items: center;
    padding: 15px;
    border: 2px solid #ddd;
    border-radius: 8px;
    cursor: pointer;
    transition: all 0.3s;
}

.payment-option input[type="radio"]:checked + .payment-label {
    border-color: #ff0000;
    background-color: #fff8f8;
}

.payment-option:hover .payment-label {
    border-color: #aaa;
}

.payment-content {
    margin-left: 15px;
}

.payment-content h4 {
    margin: 0 0 5px 0;
    color: black;
    font-size: 16px;
}

.payment-content p {
    margin: 0;
    color: #666;
    font-size: 14px;
}

.payment-content .balance-sufficient {
    color: #28a745;
    margin-top: 5px;
}
.payment-content .balance-insufficient {
    color: red;
    margin-top: 5px;
}

.payment-content .cod-error-message {
    color: #dc3545;
    margin-top: 5px;
    font-weight: bold;
}

/* Custom radio button styling */
.payment-label::before {
    content: "";
    display: inline-block;
    width: 18px;
    height: 18px;
    border: 2px solid #999;
    border-radius: 50%;
    margin-right: 10px;
    flex-shrink: 0;
}

.payment-option input[type="radio"]:checked + .payment-label::before {
    border-color: #ff0000;
    background-color: #ff0000;
    background-image: radial-gradient(circle, white 35%, transparent 40%);
}


    </style>
</head>
<body>

    <%-include("../../views/partials/user/header")%>

    <div class="checkout-header">
        <h1>CHECKOUT 2</h1>
    </div>

    <main class="main-content">
        <div class="checkout-container">
            <div class="checkout-form">
                <h2>Shipping Information</h2>
                <div class="progress-bar">
                    <div class="progress-item">Shipping Method</div>
                    <div class="progress-item active">Payment Method</div>
                    <div class="progress-item">Review</div>
                </div>

                <!-- Shipping Address Section -->
                <div class="shipping-address">
                    <h3>Shipping Address</h3>
                    <div class="address-cards">
                        <div class="address-card selected" id="selectedAddress">
                            <h4><%= selectedAddress.name %></h4>
                            <p><%= selectedAddress.street %>, <%= selectedAddress.city %>, <%= selectedAddress.state %>, <%= selectedAddress.zip %>, <%= selectedAddress.country %></p>
                        </div>
                    </div>
                </div>

                <!-- Shipping Method Section -->
                <div class="shipping-methods">
                    <h3>Shipping Method</h3>
                    <div class="shipping-option" id="selectedShippingMethod">
                        <h4><%= shippingMethod %> - <%= shippingCost %></h4>
                    </div>
                </div>


                <!-- Payment Method Section -->
                <div class="payment-methods">
                    <h3>Payment Method</h3>
                    
                    <!-- Cash on Delivery -->
                    <div class="payment-option">
                        <input type="radio" id="cod" name="payment" value="CashOnDelivery" >

                        <label for="cod" class="payment-label">
                            <div class="payment-content">
                                <h4>Cash on Delivery</h4>
                                <% if (!isCODAllowed) { %>
                                    <p class="cod-error-message">Not available for orders above ₹7000</p>
                                <% } %>
                            </div>
                        </label>
                    </div>
                    
                    <!-- Razorpay -->
                    <div class="payment-option">
                        <input type="radio" id="razorpay" name="payment" value="Razorpay" 
                            <%= (walletBalance >= totalAmount) ? 'checked' : '' %>
                            onchange="selectPaymentMethod('Razorpay')">
                        <label for="razorpay" class="payment-label">
                            <div class="payment-content">
                                <h4>Online Payment (Razorpay)</h4>
                            </div>
                        </label>
                    </div>
                    
                    <!-- Wallet -->
                    <div class="payment-option">
                        <input type="radio" id="wallet" name="payment" value="Wallet" 
                            <%= (walletBalance >= totalAmount) ? 'checked' : '' %>
                            onchange="selectPaymentMethod('Wallet')">
                        <label for="wallet" class="payment-label">
                            <div class="payment-content">
                                <h4>Wallet Payment</h4>
                                <p>Balance: ₹<%= walletBalance.toFixed(2) %></p>
                                <% if (walletBalance >= totalAmount) { %>
                                    <p class="balance-sufficient">Sufficient balance</p>
                                <% } else { %>
                                    <p class="balance-insufficient">Insufficient balance (needs ₹<%= (totalAmount - walletBalance).toFixed(2) %> more)</p>
                                <% } %>
                            </div>
                        </label>
                    </div>
                </div>

                <button class="checkout-btn" onclick="window.location.href='/checkout1'">Back</button>
                <button class="checkout-btn" onclick="proceedToCheckout3()">Continue</button>




            </div>

                <!-- Order Summary -->
                <div class="order-summary">
                    <h2>Your order</h2>
                    <div class="summary-item">
                        <span>Subtotal</span>
                        <span>₹<%= cartTotal %></span>
                    </div>
                    <div class="summary-item">
                        <span>Shipping & Handling</span>
                        <span>₹<%= shippingCost %></span>
                    </div>
                    <% if (discountAmount > 0) { %>
                        <div class="summary-item">
                            <span style="color: red;">Coupon Discount</span>
                            <span style="color: red;">-₹<%= discountAmount %></span>
                        </div>
                    <% } %>
                    <div class="summary-item total-row">
                        <span>Total</span>
                        <span>₹<%= totalAmount %></span> <!-- Display total amount -->
                    </div>
                </div>
        </div>
    </main>

    <%-include("../../views/partials/user/footer")%>
<script>


    document.addEventListener('DOMContentLoaded', () => {
    // Restore selected payment method from sessionStorage
    const savedPaymentMethod = sessionStorage.getItem('selectedPaymentMethod');
    if (savedPaymentMethod) {
        const paymentInput = document.querySelector(`input[name="payment"][value="${savedPaymentMethod}"]`);
        if (paymentInput) {
            paymentInput.checked = true;
        }
    }
});

function selectPaymentMethod(method) {
    // Store in sessionStorage
    sessionStorage.setItem('selectedPaymentMethod', method);
}

async function savePaymentMethod(paymentMethod) {
    try {
        // Store in sessionStorage
        sessionStorage.setItem('selectedPaymentMethod', paymentMethod);
        
        const response = await fetch('/checkout2/save', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ paymentMethod }),
        });

        const result = await response.json();
        if (result.success) {
            window.location.href = '/checkout3';
        } else {
            throw new Error(result.message || 'Failed to save payment method');
        }
    } catch (error) {
        console.error('Error saving payment method:', error);
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: error.message,
        });
    }
}


// In checkout2.ejs, update the proceedToCheckout3 function:

async function proceedToCheckout3() {
    const paymentMethod = document.querySelector('input[name="payment"]:checked')?.value;
    
    if (!paymentMethod) {
        await Swal.fire({
            icon: 'error',
            title: 'Payment Method Required',
            text: 'Please select a payment method to continue.',
        });
        return;
    }

    // Special validation for Wallet
    if (paymentMethod === 'Wallet' && <%= walletBalance %> < <%= totalAmount %>) {
        await Swal.fire({
            icon: 'error',
            title: 'Insufficient Balance',
            text: 'Your wallet balance is insufficient for this purchase',
        });
        return;
    }

    // Special validation for COD
    if (paymentMethod === 'CashOnDelivery' && !<%= isCODAllowed %>) {
        await Swal.fire({
            icon: 'error',
            title: 'COD Not Available',
            text: 'Cash on Delivery is not available for orders above ₹7000',
        });
        return;
    }

    try {
        const response = await fetch('/checkout2/save', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ paymentMethod }),
            credentials: 'include'
        });

        const result = await response.json();

        if (result.success) {
            window.location.href = '/checkout3';
        } else {
            throw new Error(result.message || 'Failed to save payment method');
        }
    } catch (error) {
        console.error('Error:', error);
        Swal.fire({
            icon: 'error',
            title: 'Error',
            text: error.message || 'Failed to proceed to checkout',
        });
    }
}






</script>
    

</body>
</html>