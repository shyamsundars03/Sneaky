<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/sneaky.png" type="image/png">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <title>SNEAKY</title>
    <style>
        /* Reset and base styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        body {
            background-color: #f5f5f5;
        }

        /* Wishlist header styles */
        .wishlist-header {
            background-color: #000;
            color: #fff;
            text-align: center;
            padding: 40px 0 40px;
            position: relative;
        }

        .wishlist-header h1 {
            font-size: 36px;
            font-weight: bold;
            letter-spacing: 1px;
        }

        .curve {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 60px;
            background-color: #fff;
            border-top-left-radius: 50% 100%;
            border-top-right-radius: 50% 100%;
        }

        /* Wishlist content styles */
        .wishlist-content {
            background-color: #fff;
            padding: 20px;
            max-width: 1200px;
            margin: 0 auto;
        }

        .wishlist-table {
            width: 100%;
            border-collapse: collapse;
        }

        .wishlist-table th {
            text-align: left;
            padding: 15px 10px;
            border-bottom: 1px solid #eee;
            font-weight: bold;
            color: #333;
        }

        .wishlist-table td {
            padding: 15px 10px;
            border-bottom: 1px solid #eee;
            vertical-align: middle;
        }

        .product-cell {
            display: flex;
            align-items: center;
        }

        .product-image {
            width: 70px;
            height: 70px;
            background-color: #f9f9f9;
            margin-right: 15px;
            border-radius: 4px;
            overflow: hidden;
        }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .product-info h3 {
            font-size: 14px;
            color: #333;
            margin-bottom: 5px;
            font-weight: normal;
        }

        .product-price {
            font-size: 14px;
            color: #666;
        }

        .add-to-cart-btn {
            background-color: #e60000;
            color: white;
            border: none;
            padding: 10px 30px;
            margin-right: 90px;
            border-radius: 4px;
            cursor: pointer;
            font-size: 14px;
            transition: background-color 0.3s;
        }

        .add-to-cart-btn:hover {
            background-color: #cc0000;
        }

        .delete-btn {
            color: #ff0000;
            margin-top: 5px;
            margin-left: 70px;
            cursor: pointer;
            font-size: 16px;
        }


        .actions-cell {
            text-align:center;
            display: flex;
        }

        /* Responsive styles */
        @media (max-width: 768px) {
            .wishlist-header {
                padding: 60px 0 100px;
            }

            .wishlist-header h1 {
                font-size: 28px;
            }

            .product-image {
                width: 60px;
                height: 60px;
            }

            .add-to-cart-btn {
                padding: 8px 15px;
                font-size: 12px;
            }
        }

        @media (max-width: 576px) {
            .wishlist-table th:first-child,
            .wishlist-table td:first-child {
                padding-left: 0;
            }

            .wishlist-table th:last-child,
            .wishlist-table td:last-child {
                padding-right: 0;
            }

            .product-info h3 {
                font-size: 12px;
            }

            .product-price {
                font-size: 12px;
            }

            .add-to-cart-btn {
                padding: 6px 12px;
                font-size: 11px;
            }
        }
    </style>
</head>
<body>
    <%- include("../../views/partials/user/header") %>

    <div class="wishlist-header">
        <h1>WISHLIST</h1>
    </div>

    <!-- Wishlist content section -->
    <div class="wishlist-content">
        <table class="wishlist-table">
            <thead>
                <tr>
                    <th style="width: 70%;">Products</th>
                    <th style="width: 30%; text-align: right;">Remove</th>
                </tr>
            </thead>
            <tbody>
                <% if (wishlist.wishlistItems.length > 0) { %>
                    <% wishlist.wishlistItems.forEach(item => { %>
                        <tr>
                            <td>
                                <div class="product-cell">
                                    <div class="product-image">
                                        <img src="<%= item.product.productImage[0] %>" alt="<%= item.product.productName %>">
                                    </div>
                                    <div class="product-info">
                                        <h3><%= item.product.productName %></h3>
                                        <div class="product-price">â‚¹<%= item.product.price %></div>
                                    </div>
                                </div>
                            </td>
                            <td class="actions-cell">
                                <button class="add-to-cart-btn" onclick="addToCart('<%= item.product._id %>')">Add to cart</button>
                                <div class="delete-btn" onclick="removeFromWishlist('<%= item.product._id %>')">
                                    <i class="fas fa-trash"></i>
                                </div>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="2" style="text-align: center;">Your wishlist is empty.</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>

    <%- include("../../views/partials/user/footer") %>

    <script>
        // Function to add product to cart
       async function addToCart(productId) {
    try {
        const response = await fetch('/cart/add', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ productId }),
        });

        const result = await response.json();

        if (result.success) {
            Swal.fire({
                icon: 'success',
                title: 'Added to Cart!',
                text: 'The product has been added to your cart.',
            });
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: result.message || 'Failed to add to cart.',
            });
        }
    } catch (error) {
        console.error('Error:', error);
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Something went wrong!',
        });
    }
}

            // Remove from Wishlist Function
    async function removeFromWishlist(productId) {
        try {
            const response = await fetch('/wishlist/toggle', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ productId }),
            });

            const result = await response.json();

            if (result.success) {
                window.location.reload(); // Reload to reflect updated wishlist
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: result.message || 'Failed to remove from wishlist.',
                });
            }
        } catch (error) {
            console.error('Error:', error);
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Something went wrong!',
            });
        }
    }
    </script>
</body>
</html>