                        <td data-label="Price">₹4500</td>
                        <td data-label="Delete">
                            <div class="delete-btn">
                                <i class="fas fa-trash"></i>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td data-label="Products">
                            <div class="product-info">
                                <img src="https://via.placeholder.com/80" alt="Sneakers" class="product-img">
                                <div class="product-details">
                                    <div class="product-name">Mollis nunc sed id semper risus in hendrerit</div>
                                    <div class="product-price">₹45.00</div>
                                </div>
                            </div>
                        </td>
                        <td data-label="Quantity">
                            <div class="quantity-control">
                                <div class="quantity-btn">-</div>
                                <input type="text" value="1" class="quantity-input">
                                <div class="quantity-btn">+</div>
                            </div>
                        </td>
                        <td data-label="Price">₹4500</td>
                        <td data-label="Delete">
                            <div class="delete-btn">
                                <i class="fas fa-trash"></i>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>

            <div class="cart-summary">
                <h3 class="cart-total-title">Cart total</h3>
                <div class="cart-summary-row">
                    <span class="cart-summary-label">Subtotal</span>
                    <span class="cart-summary-value">₹4500</span>
                </div>
                <div class="cart-summary-row total-row">
                    <span class="cart-summary-label">Total</span>
                    <span class="cart-summary-value">₹4500</span>
                </div>
                <button class="checkout-btn">Proceed to Checkout</button>
            </div>
        </div>

        <%-include("../../views/partials/user/footer")%>

</body>
</html>