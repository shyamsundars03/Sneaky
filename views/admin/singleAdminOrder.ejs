                padding: 10px;
                position: relative;
                border-bottom: none;
            }
            
            .products-table td:before {
                content: attr(data-label);
                float: left;
                font-weight: bold;
            }
            
            .product-cell {
                justify-content: flex-end;
            }

            .header-actions {
                flex-direction: column;
                gap: 1rem;
                align-items: stretch;
            }

            .search-box {
                width: 100%;
            }

            .table-container {
                margin: 0 -1rem;
            }
        }

        @media (max-width: 480px) {
            .hero h1 {
